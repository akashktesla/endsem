<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bgblack"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="200dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:paddingTop="10dp"
            android:layout_height="50dp"
            android:background="@drawable/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="LOGIN"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/bred"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >





        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@color/bred"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_emailet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgblack"
                android:inputType="textEmailAddress"
                android:textColor="@color/dyellow"
                android:hint="Email"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textColorHint="@color/bred"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_passet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgblack"
                android:textColor="@color/dyellow"
                android:inputType="textPassword"
                android:hint="Password"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <RadioGroup
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rg"
            android:layout_height="wrap_content">
           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/rbstudent"
               android:textColor="@color/bred"
               android:text="Student"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bred"
                android:id="@+id/rbteacher"
                android:text="Teacher"/>
        </RadioGroup>




        <Button
            android:id="@+id/login_loginBtn"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Login"
            android:layout_below="@id/login_passet"
            android:backgroundTint="@color/bred"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>